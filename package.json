{
  "name": "turksexplorer-backend",
  "version": "1.0.0",
  "description": "Tourism booking platform backend for Turks and Caicos Islands",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "test:integration": "jest --testPathPattern=integration --detectOpenHandles",
    "test:unit": "jest --testPathPattern=unit --detectOpenHandles",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "db:seed": "node scripts/seedDatabase.js",
    "db:migrate": "node scripts/migrate.js",
    "db:backup": "bash deployment/scripts/backup.sh",
    "deploy": "bash deployment/scripts/deploy.sh",
    "setup:env": "bash deployment/scripts/setup-env.sh",
    "monitor": "bash deployment/scripts/monitor.sh",
    "health": "node healthcheck.js",
    "build": "echo 'No build step required for backend'",
    "prestart": "npm run lint",
    "postinstall": "echo 'Installation completed successfully'"
  },
  "keywords": [
    "tourism",
    "booking",
    "turks-and-caicos",
    "travel",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "TurksExplorer Team",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "google-auth-library": "^9.15.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.5",
    "nodemailer": "^6.10.0",
    "nodemon": "^3.1.9",
    "sib-api-v3-sdk": "^8.5.0",
    "stripe": "^17.5.0",
    "winston": "^3.11.0",
    "compression": "^1.7.4",
    "express-slow-down": "^2.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^9.1.3",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.1.0",
    "@types/jest": "^29.5.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/turksexplorer-backend.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/turksexplorer-backend/issues"
  },
  "homepage": "https://turksexplorer.com",
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "middleware/**/*.js",
      "models/**/*.js",
      "routes/**/*.js",
      "utils/**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/tests/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testTimeout": 30000,
    "verbose": true,
    "forceExit": true,
    "detectOpenHandles": true,
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  }
}